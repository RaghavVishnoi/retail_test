<script>
	function poUpdate(poNumber){
		var assignment_id;
 		$(".updatePo").attr("style","display: block");
 		$(".updatePoInput").val(poNumber);
 		assignment_id = $('#update_assignment').val();
	 $(".pocancel").click(function(){
	 	$(".updatePo").attr("style","display: none !important");
	 });

