	    var poNumber = $(".updatePoInput").val();
			 if(poNumber == null || poNumber == '' || poNumber == 'undefined'){
			 	alert("Please enter update date!")
			 }else{

		 		$.ajax({
		 			url : "/vendor_assignments/"+assignment_id+"/po",
		 			type : "POST",
		 			data : {
		 				po_number: poNumber
		 			},
		 			dataType : "json",

		 			complete: function(){

		 			},
		 			success: function(data,xhr){
		 				location.reload();
		 			},
		 			error: function(){

		 			}
		 		});
		 	
		
		}
	 });
	}
    
</script>
	 
 