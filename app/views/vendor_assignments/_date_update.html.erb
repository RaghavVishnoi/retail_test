<script>
    var assignment_id;
	$(".updateStatus").click(function(){
 		$(".updateDate").attr("style","display: block");
 		assignment_id = $('#update_assignment').val();
	 });
	 $(".pocancel").click(function(){
	 	$(".updateDate").attr("style","display: none !important");
	 });

	 $(".updatesubmit").click(function(){
	    var status = $('#stage_name').val();
	 	var updateDate = $(".updateInput").val();
			 if(updateDate == null || updateDate == '' || updateDate == 'undefined'){
			 	alert("Please enter valid date!")
			 }else{

		 		$.ajax({
		 			url : "/vendor_assignments/"+assignment_id+"/status",
		 			type : "GET",
		 			data : {updateDate: 	updateDate,
		 				status: status
		 			},
		 			dataType : "json",

		 			complete: function(){

		 			},
		 			success: function(data,xhr){
 		 				if(data['result'] == true || data['result'] == 'true'){
 		 					alert(data['message'])
 		 					location.reload();
 		 				}else{
 		 					alert(data['message'])
 		 				}
		 			},
		 			error: function(){

		 			}
		 		});
		 	
		
		}
	 });
</script>
	 