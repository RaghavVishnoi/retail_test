<%= link_to "New Category", new_category_path, :id => 'new-button' %>

<table class="ui table">
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to "Edit", [:edit, category] %></td>
        <td><%= link_to "Delete", [category], method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</ul>
