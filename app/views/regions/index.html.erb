<%= link_to "New Region", new_region_path, :id => 'new-button' %>
<table class="ui table">
  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= link_to "Edit", [:edit, region] %></td>
        <td><%= link_to "Delete", [region], method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>