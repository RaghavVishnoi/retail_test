<%= form_for @address, :html => { :class => 'user-form' } do |f| %>

  <h4 id="form-title"><%= form_title %></h4>
  
  <%= render :partial => "shared/error_messages", :locals => { :errors => @address.errors} %>

  <div class="form-field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  
  <div class="form-field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="form-field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="form-field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <%= f.submit %>
<% end %>