<section class="comments_sectn">
					<div class="row">	
						<div class="col-lg-12">
						<div class="main-box clearfix">
						<div class="clearfix">
							<div class="common_page gsb_page">
								
							<h2>Photo</h2>
							<div class="comments_blk">
								<div class="comments">
									<strong>Remarks- </strong><%=@request.remarks%>.
								</div>
								

								<div class="comments_img_blk">
									<ul class="list-inline list-unstyled">
										<% @request.images.first(3).each do |image| %>
		  							<li><%= image_tag image.image_url,:class => 'img'%>
		  								<% if image.lat? && image.long? %>
		  								<span style="background-color:#F37022;">
											<%= link_to "Click to open Maps", "http://maps.google.com/maps?q=#{[image.lat, image.long].join(',')}", :target => "_blank" %>
										</span>	
							<% end %>	
		  							</li>

						<% end %>
										 
									</ul>
								</div>
							</div>
							<div class="comments_blk">
								<div class="comments">
									<strong>Location </strong>
								</div>
								<div class="comments_img_blk">
								<%=@request.images.first.lat%>,<%=@request.images.first.long%>
								</div>	
								
						</div>
					</div>
					</div>
				</div>
			</div>
		</section>

<script>
 		$('.img').click(function(){
 			 $('.img_open').css("display","block");
			 imgSrc = $(this).attr('src');
			 $('.add-img').attr("src",imgSrc);
			 $('.img_open').click(function(){
				$('.img_open').hide();
			

		});

		});
 
</script>

<div class="img_open">
	<div class="img_blk">
		
		<img class="add-img"/>
	</div>
</div>
 