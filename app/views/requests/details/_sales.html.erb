<section class="comments_sectn">
	<div class="row">	
		<div class="col-lg-12">
			<div class="main-box clearfix">
				<div class="clearfix">
					<div class="common_page gsb_page">
						<h2>Sales and other details</h2>
						<div class="comments_blk">
							<div class="row">
								<div class="col-md-5">
									Store Avg. 	Monthly Sale
								</div>
								<div class="col-md-4">
									<div class="blue">
										<%=Request.store_monthly_sale(@request.avg_store_monthly_sales)%>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-5">
									Avg. Gionee Sale
								</div>
								<div class="col-md-4">
									<div class="blue">
										<%=Request.gionee_monthly_sale(@request.avg_gionee_monthly_sales)%>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-5">
									Space available in store
								</div>
								<div class="col-md-4">
									<div class="blue">
										<%=@request.space_available%>
									</div>
								</div>
							</div>
							<%= render "requests/details/maintenance_details" if @request.request_type == 'maintenance'%>
							<%= render "requests/details/inshop_details" if @request.request_type == 'in_shop'%>
							<%= render "requests/details/sis_details" if @request.request_type == 'sis'%>
							<%= render "requests/details/gsb_details" if @request.request_type == 'gsb'%>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>	