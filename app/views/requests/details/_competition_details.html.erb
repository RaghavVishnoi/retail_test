<% @request.branding_details.each_slice(3) do |branding_details| %>
  <div class="approv_cont clearfix">
       
    <div class="appr_info">
      <div><%= field_display_name(branding_details[0]) %></div>
      <div><%= field_values_str(branding_details[0]) %></div>
    </div>

    <div class="appr_retail">
      <div><%= field_display_name(branding_details[1]) %></div>
      <div><%= field_values_str(branding_details[1]) %></div>
    </div>

    <div class="appr_desc">
      <div><%= field_display_name(branding_details[2]) %></div>
      <div><%= field_values_str(branding_details[2]) %></div>
    </div>

  </div>
<% end %>


<div class="approv_cont clearfix">
     
  <div class="appr_info">
    <div>Remarks</div>
    <div><%= @request.remarks %></div>
  </div>
<%if @request.status == 'cmo_declined' || @request.status == 'pending' || @request.status == 'approved' || @request.status == 'declined'%>
  <div class="appr_retail">
    <div>CMO Comment</div>
    <div><%=@request.comment_by_cmo%></div>
  </div>
  <%end%>
  <%if  @request.status == 'approved' || @request.status == 'declined'%>
    <div class="appr_desc">
    <div>Approver Comment</div>
    <div><%=@request.comment_by_approver%></div>
  </div>
  <%end%>

  

</div>

<div class="image-wrapr">
  <% @request.images.each do |image| %>
  <div>
    <div class="image_wrap_img">
      <%= link_to image.image_url, :class => "img_link" do %>
        <%= image_tag image.image_url %>
      <% end %>
    </div>

    <div class="image_wrap_add"><%= image.address %></div>

    <% if image.lat? && image.long? %>
      <%= link_to "Click to open Maps", "http://maps.google.com/maps?q=#{[image.lat, image.long].join(',')}", :target => "_blank", :class => "image_wrap_link" %>
    <% end %>
    </div>
  <% end %>
</div>
 
