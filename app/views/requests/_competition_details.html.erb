<div class="competition_details_page hidden">
  <% @request.branding_details.each do |property| %>
    <%= render :partial => "shared/field", :locals => { :form => f, :property => property } %>
  <% end %>

  <%= f.text_area :remarks, :placeholder => "Remarks" %>

  <%= field_set_tag "Images" do %>
    <%= link_to "Add Image", new_image_path, :remote => true %>
    <div class="images">
      <% @request.images.each do |image| %>
        <%= render :partial => 'images/image', :locals => { :image => image } %>
      <% end %>
    </div>
  <% end %>

  <%= f.submit %>
</div>