<%= render :partial => "shared/error_messages", :locals => { :errors => @request.errors } %>
<div class="request_wrap clearfix">
  <div><%= request_type_name(@request) %> approve</div>
  <div class="apprvr_wrap">
    <div class="approv_cont clearfix">
         
      <div class="appr_info">
        <div>CMO Name</div>
        <div><%= @request.cmo_name %></div>
      </div>

      <div class="appr_retail">
        <div>Retailer Code</div>
        <div><%= @request.retailer_code %></div>
      </div>

      <div class="appr_desc">
        <div>Rsp Name</div>
        <div><%= @request.rsp_name %></div>
      </div>

    </div>


    <div class="approv_cont clearfix">
         
      <div class="appr_info">
        <div>City</div>
        <div><%= @request.city %></div>
      </div>

      <div class="appr_retail">
        <div>State</div>
        <div><%= @request.state %></div>
      </div>

      <div class="appr_desc">
        <div></div>
        <div></div>
      </div>

    </div>

    <div class="approv_cont clearfix">
         
      <div class="appr_info">
        <div>Avg. Monthly sales</div>
        <div><%= @request.avg_store_monthly_sales %></div>
      </div>

      <div class="appr_retail">
        <div>State</div>
        <div><%= @request.avg_gionee_monthly_sales %></div>
      </div>

      <div class="appr_desc">
        <div></div>
        <div></div>
      </div>

    </div>

    <% if @request.pending? %>
      <%= form_for @request do %>
        <div class="btn_blc">
        <%= submit_tag "Approve", :class => "apprv_btn"%>
        <%= submit_tag "Decline", :class => "decline_btn"%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>