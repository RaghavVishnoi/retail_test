<%= form_for @request, :html => { :class => 'user-form' } do |f| %>

  <h4 id="form-title">Edit Request</h4>

  <%= render :partial => "shared/error_messages", :locals => { :errors => @request.errors } %>

  <div class="form-field">
    <%= f.label :cmo_name %>
    <%= f.text_field :cmo_name %>
  </div>

  <div class="form-field">
    <%= f.label :retailer_code %>
    <%= f.text_field :retailer_code %>
  </div>

  <div class="form-field">
    <%= f.label :rsp_name %>
    <%= f.text_field :rsp_name %>
  </div>

  <div class="form-field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="form-field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="form-field">
    <%= f.label :avg_store_monthly_sales %>
    <%= f.text_field :avg_store_monthly_sales %>
  </div>

  <div class="form-field">
    <%= f.label :avg_gionee_monthly_sales %>
    <%= f.text_field :avg_gionee_monthly_sales %>
  </div>

  <%= f.submit "Approve" %>
  <%= f.submit "Decline" %>
<% end %>