 
<%= form_for @request, :html => { :class => "request-form", :data => { :pages => ['.rsp_page', '.requestor_details_page', '.shop_details_page', '.competition_details_page'], :current_page => 0 } } do |f| %>

  <%= render :partial => "shared/error_messages", :locals => { :errors => @request.errors } %>
<div class="rsp_wrap clearfix" id="rsp_wrap">
  <div class="rsp_page page">
    <%= f.hidden_field :is_rsp %>
    <div>RSP Present in Shop?</div>
    <input type="submit" id="request_is_rsp_true" value="Yes" class="apprv_btn">
    <input type="submit" id="request_is_rsp_false" value="No" class="decline_btn">

    <%= f.select :rsp_not_present_reason, RSP_NOT_PRESENT_REASON, { :prompt => "Select Reason" }, { :class => 'hidden required' } %>

    <input type="submit" value="Next" name="submit button" id="next" class="apprv_btn hidden">

  </div>
</div>

  <div class="request_wrap clearfix hidden">
    <div>Select the type of request</div>

    <div class="req_blc">
      <div class="requstr_main">
        <div class="sis">SIS requirement</div>
        <div class="in_shop">in-shop requirement</div>
        <div class="gsb">GSB requirement</div>
        <div class="maintenance">Maintenance</div>
        <div class="visitor">Visitor</div>
      </div>

      <div class="req_type">
        <%= link_to "SIS", "javascript:void(0);", :class => 'select', :data => { :request_type => "sis" } %>

        <%= link_to "In-Shop", "javascript:void(0);", :data => { :request_type => "in_shop" } %>

        <%= link_to "GSB", "javascript:void(0);", :data => { :request_type => "gsb" } %>

        <%= link_to "Maintenance", "javascript:void(0);", :data => { :request_type => "maintenance" } %>

         <%= link_to "Visitor", "javascript:void(0);", :data => { :request_type => "visitor" } %>
      </div>
    </div>
  <div class="clear"></div>
  <div id="requestor">
    <div class="req_cont clearfix">
      <div class="reqstr_detail">
      <div class="selected requestor_details_page details" >Requestor Details <span>1</span></div>
      <div class="shop_details_page details">shop Details <span>2</span></div>
      <div class="competition_details_page details">Competition Details <span>3</span></div>
      </div>

      <div class="form_cont clearfix">
         
        <%= f.hidden_field :request_type %>

       

        <%= render :partial => 'requestor_details', :locals => { :f => f } %>

        <%= render :partial => 'shop_details', :locals => { :f => f } %>
        
        <%= render :partial => 'competition_details', :locals => { :f => f } %>

      </div>
      </div>
   


  <div class="button_blc clearfix">
    <input type="submit" value="Next" name="submit button" id="next" class="apprv_btn hidden">
    <input type="submit" value="Back" id="back" class="decline_btn hidden">
  </div>

    </div>
   


  </div>
  
</div>
   
 
  
<% end %>
