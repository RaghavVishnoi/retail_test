<div class="shop_details_page page hidden">
 
    <%= f.select :state, STATES, { :prompt => "State" }, :class => "pd-detail required"%>


 
    <%= f.text_field :city, :placeholder => "City", :class => "input_txt required" %>



    <%= f.text_field :shop_name, :placeholder => "Shop Name", :class => "input_tx required"%>



    <%= f.text_field :shop_address, :placeholder => "Shop Address", :class => "pd-detail required" %>
 


    <%= f.text_field :shop_owner_name, :placeholder => "Shop Owner Name", :class => "input_txt required" %>


    <%= f.phone_field :shop_owner_phone, :placeholder => "Shop Owner Phone", :class => "input_tx" %>



    <%= f.select :avg_store_monthly_sales, AVG_STORE_MONTHLY_SALES, { :prompt => "Avg. store monthly sales" }, :class => "pd-detail required" %>


    <%= f.select :avg_gionee_monthly_sales, AVG_GIONEE_MONTHLY_SALES, { :prompt => "Avg. gionee monthly sales" }, :class => "input_txt required" %>


  <div class="input_tx">
    <%= f.select :space_available, SPACE_AVAILABLE, { :prompt => "Space availabe in store" }, { :class => 'sis_request_type in_shop_request_type request_type_field required hidden' } %>
  </div>

  <div class="input_tx">
    <%= f.select :is_gionee_gsb_present, BOOLEAN_VALUES, { :prompt => "Gionee GSB Present?" }, { :class => 'sis_request_type in_shop_request_type request_type_field hidden required' } %>
  </div>

  <div class="input_tx">
    <%= f.select :type_of_sis_required, SIS_TYPES, { :prompt => "Type of SIS required?" }, { :class => 'sis_request_type request_type_field hidden required' } %>
  </div>

  <div class="input_txt">
    <%= f.select :is_sis_installed, BOOLEAN_VALUES, { :prompt => "Is Gionee SIS installed in shop?" }, { :class => "in_shop_request_type gsb_request_type request_type_field hidden required"} %>
  </div>

  <div class="pd-detail">
    <%= f.select :is_main_signage, BOOLEAN_VALUES, { :prompt => "Is it main signage?" }, { :class => "gsb_request_type request_type_field hidden required"} %>
  </div>

  <div class="pd-detail">
    <%= f.select :is_gsb_installed_outside, BOOLEAN_VALUES, { :prompt => "GSB installed outside?" }, { :class => "in_shop_request_type request_type_field hidden required" } %>
  </div>
  
  <div class="input_txt">
    <%= f.text_field :width, :placeholder => "Width", :class => "gsb_request_type request_type_field hidden required" %>
  </div>

  <div class="pd-detail">
    <%= f.text_field :height, :placeholder => "Height", :class => "gsb_request_type request_type_field hidden required" %>
  </div>

  <div class="input_tx">
    <%= f.select :type_of_gsb_requested, GSB_TYPES, { :prompt => "Type of GSB Requested?" }, { :class => "gsb_request_type request_type_field hidden required" } %>
  </div>

  <div class="input_tx in_shop_request_type request_type_field hidden required">
    <%= render :partial => "shared/field", :locals => { :form => f, :property => @request.shop_requirements } %>
  </div>
</div>