</div>

<div id="content-wrapper">
<div class="row">
<div class="col-lg-12">
	<div class="add_new_notfcn">
		<h4><i class="fa fa-plus-square fa-lg"></i><span>
			 <%= link_to "Upload new document", new_document_path %>
			
		</span>
		</h4>
	</div>
</div>
</div>

<div class="row">
	<div class="col-lg-12">
	<div class="main-box clearfix">
	<div class="clearfix">
		<div class="common_page notification_page">
		<div class="hdr">
		<div class="row">
			<div class="col-md-5">
				<div class="txt">Documents</div>
			</div>
		</div>
		</div>	
		 <% @documents.each do |document| %>
		<div class="ntifctn_blk">
			<div class="row">
				<div class="col-md-9">
					<h5 class="blue"><%=document.document_title%></h5>
					<h5> <%=get_tag(document.id)%></h5>
					<h5> - <%=get_uploaded_by(document.repository).email%></h5>
				</div>

				<div class="col-md-3">
					<h5><%=document.document_name%></h5>
					<h5><%=document.uploaded_date.strftime("%d %b,%Y")%></h5>
					<h5 class="green">
						<%=link_to('/uploads/repository/'+document.id.to_s+'/'+document.document_name.to_s) do %>	
							<i class="fa fa-download" aria-hidden="true"></i>
						<%end%>
					</h5>
				</div>
			</div>

			</div>
			<% end %>
				

			</div>
			 <%if @documents.length > 1%>
			      <%=will_paginate @documents%>
			  <%end%>
		</div>
		</div>
	</div>
</div>
 
					
				
		

	
<script type="text/javascript">
  $('#repository').attr("class",'active') 
</script>