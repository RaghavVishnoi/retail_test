    $('.img').click(function(){
       $('.img_open').css("display","block");
       imgSrc = $(this).attr('src');
       $('.add-img').attr("src",imgSrc);
       $('.img_open').click(function(){
        $('.img_open').hide();
      

    });

    });
 
