    $('#search__requester').change(function() {
        if($(this).is(":checked")) {
            search.push('requester');
            location.href = '/users?search='+search 
        }
        if(!$(this).is(":checked")) {
           search.splice(search.indexOf('requester'),1);
            if(search.length != 0){
              location.href = '/users?search='+search 
            }else{
              location.href = '/users'
            }
        }     
    });

    

</script>