<%= link_to "New User", new_user_path, :id => 'new-button' %>
<table class="ui table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to "Edit", [:edit, user] %>
        </td>
        <td>
          <%= link_to "Delete", [user], method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>