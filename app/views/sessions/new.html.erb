<%= form_tag users_sign_in_path do %>
  <div class="login_wrapper" id="toggle">
    <div class="logobox">
      <%= image_tag 'logo.png' %>
    </div>

    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <div class="login_form">
      <%= text_field_tag :email, nil, :placeholder => "Email", :id => "email" %>
      <%= password_field_tag :password, nil, :placeholder => "Password", :id => "password" %>
    </div>
    <div class="button_box">
      <div class="fleft">
        <%= link_to "Forgot Password", passwords_new_path %>
      </div>
      <div class="fright">
        <%= submit_tag "Log in" %>
      </div>
      <div class="clear"></div>
    </div>
  </div>
<% end %>