<%= form_tag users_sign_in_path, :id => 'sign_in_form' do %>
  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>
  <div class="form-field">
    <%= text_field_tag :email, nil, placeholder: "Email", :class => 'ui input' %>
  </div>
  <div class="form-field">
    <%= password_field_tag :password, nil, placeholder: "Password", :class => 'ui input' %>
  </div>
  <%= submit_tag "Log in" %>
  <div class="clear">
<% end %>