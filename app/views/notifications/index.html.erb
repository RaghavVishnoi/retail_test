<div id="content-wrapper">
<div class="row">
<div class="col-lg-12">
	<div class="add_new_notfcn">
		<h4><i class="fa fa-plus-square fa-lg"></i><span>
			 <%= link_to "Send New Notification", new_notification_path %>
			
		</span>
		</h4>
	</div>
</div>
</div>

<div class="row">
	<div class="col-lg-12">
	<div class="main-box clearfix">
	<div class="clearfix">
		<div class="common_page notification_page">
		<div class="hdr">
		<div class="row">
			<div class="col-md-5">
				<div class="txt">Notifications</div>
			</div>
		</div>
		</div>	
		 <% @notifications.each do |notification| %>
		<div class="ntifctn_blk">
			<div class="row">
				<div class="col-md-10">
					<p class="blue"><%=notification.message%></p>
					<h4> <%=notification.state%></h4>
				</div>

				<div class="col-md-2">
					<p><%=notification.send_date.strftime("%b %d, %Y")%></p>
					<h5 class="<%=if notification.status == 'success' then 'green' else 'red' end%>"> <%=notification.status%></h5>
				</div>
			</div>
			</div>
			<% end %>
				

			</div>
			 <%if @notifications.length > 1%>
			      <%=will_paginate @notifications%>
			  <%end%>
		</div>
		</div>
	</div>
</div>
<script type="text/javascript">
  $('#notification').attr("class",'active') 
</script>	
					
				
		

	