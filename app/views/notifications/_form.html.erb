<div id="content-wrapper">
  
  <div class="row">
    <%= render :partial => "shared/error_messages", :locals => { :errors => @notification.errors } %>

    <div class="col-lg-12">
    <div class="main-box clearfix">
    <div class="clearfix">
      <div class="user_page">
      <h2>Send New Notification</h2>
			<%= form_for @notification, :html => { :multipart=>true } do |f| %>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group clearfix">
							<label class="col-md-2" id="height_of_label">State</label>
							<div class="col-md-8">
								
				  <%= f.select :state, Device.all.pluck(:device_holder_state).uniq,{:prompt => "Select level"},:class => 'form-control custm_select',:required => "required" %>
							
							</div>
						</div>
					
					</div>
					<!-- left part of form end --> 
					<div class="col-md-6">
						<div class="form-group clearfix">
							<label class="col-md-2"  id="height_of_label">User Type</label>
							<div class="col-md-8">
								
					 <%= f.select :app_id, USER_TYPE,{:prompt => "Select user type"},:class => 'form-control custm_select',:required => "required" %>
								
							</div>
						</div>
						</div>
					</div>
					<div class="row">
					<div class="col-md-11">
						
					 <%= f.text_area :message ,:required => "required",:class=>'form-control' %>
					</div>
					</div>
					<div class="row">
					<div class="col-md-11">
						

						 <%= f.submit :value => "Send Notification",:class=>'btn btn-success pull-right',:style=>"margin-top: 20px;"%>
					</div>
					</div>
			<% end %>
			</div>
		</div>
		</div>
	</div>
</div>
<script type="text/javascript">
  $('#notification').attr("class",'active') 
</script>

			
		

	